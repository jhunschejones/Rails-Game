<div class="edit-game-users">
  <h2 class="title is-4">Edit players:<h2>
  <ul class="users">
    <%= render(@game.ordered_players, locals: { game: @game }) %>
  </ul>

  <br/>

  <%= form_with(model: @new_user, url: game_add_user_path(@game), remote: true) do |f| %>
    <div class="field">
      <%= f.label :name, "New player's name" %><br />
      <%= f.text_field :name, autocomplete: 'off', class: "input" %>
    </div>

    <div class="field">
      <%= f.label :email, "New player's email (required)" %><br />
      <%= f.email_field :email, autocomplete: 'off', class: "input" %>
    </div>

    <%= f.submit "Add player", class: "button is-info" %>
  <% end %>
  <br/>
  <div class="actions">
    <%= link_to "Back", edit_game_path(@game), class: "button is-light" %>
    <%= link_to "Play", game_path(@game), class: "button is-primary" %>
  </div>
  <br/>
</div>
